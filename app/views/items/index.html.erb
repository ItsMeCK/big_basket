<% if current_user.try(:role) == "Admin"%>
<p id="notice"><%#= notice %></p>

<h1>Items</h1>

<table table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Image</th>
      <th>Availability</th>
      <th>Provider</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.image %></td>
        <td><%= item.availability %></td>
        <td><%= item.provider %></td>
        <td><%= link_to 'Show', item %></td>
        <% if can? :update, @article %>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>

          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <%end%>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<% if can? :update, @article %>
<%= link_to 'New Item', new_item_path %>
<% end %>

<%  else %>
  <h1>Items</h1>

  <% @items.each do |item| %>
    <br>
    <div class="col-md-2 column productbox">
        <%= image_tag("#{item.image}", size: "160x100", alt: "Edit Entry") %>
        
        <div class="producttitle"> <%= item.name%></div>
        <div class="productprice"><div class="pull-right"><%= link_to "Show", item %></div><div class="pricetext"><%= item.price %></div>
        </div>
    </div>
  <% end %>
<% end%>  

